<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>CHECKOUT</title>
  <script src="/socket.io/socket.io.js"></script>
  <link rel="stylesheet" href="css/checkout.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  
</head>

<body>
  <div>
    <div class="card">
      <div class="leftside">
        <h4>Tu pedido</h4>
        <% for (const selectedProduct of selectedProducts[0]) {%>
          <ul>
            <li>
              <%=selectedProduct.cantidad%> "<%=selectedProduct.id%>" x $<%=selectedProduct.price%>
            </li>
          </ul>
          <%};%>
            <% for (const totalPrice of total) {%>
              <p class="total">TOTAL: $ <%=totalPrice%>
              </p>
              <%};%>
                <a href="/home"><button type="submit" class="btn btn-info rounded-pill">Volver a la tienda</button></a>
      </div>
      <div class="rightside">
        <h1>CHECKOUT</h1>
        <h2>Formulario de pago</h2>
        <form onsubmit="alert('Has hecho tu pedido!');">
          <div class="form-group">
            <label for="nombre">Nombre Completo</label> <br>
            <input id="nombre" class="form-control" type="text" name="nombre" required>
          </div>

          <div class="form-group">
            <label for="mail">E-mail</label> <br>
            <input id="mail" class="form-control" type="email" step="0.01" name="mail" required>
          </div>

          <div>
            <button id="send" class="btn btn-info btn-lg mt-3 rounded-pill" type="submit">CHECKOUT</button>
          </div>
        </form>
      </div>
    </div>
  </div>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <script src="./js/main.js"></script>
</body>

</html>