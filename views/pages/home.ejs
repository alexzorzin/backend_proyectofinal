<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("../partials/head") %>
</head>

<body>
    <div class="">
        <div class="p-3 fs-2 bg-dark d-flex justify-content-start">
            <%- include("../partials/session") %>
        </div>
    </div>
    <div class="container">
        <h1 class="text-center mt-4">Tienda Argentina : Productos</h1>
        <div class="mb-5">
            <%- include("../partials/form") %>
        </div>

        <%- include("../partials/list") %>

            <div class="mb-5">
                <%- include("../partials/chat") %>
            </div>
    </div>
    <button id="boton-carrito" class="floating-btn">
        <span id="contadorCarrito">0</span>
        <i class="icon-basket">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cart" viewBox="0 0 16 16">
                <path d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 1 0 2 1 1 0 0 1 0-2zm7 0a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
              </svg>
        </i>
    </button>

    <div class="modal-contenedor">
        <div class="modal-carrito">
            <h3 class="mb-4">CARRITO</h3>
            <button id="carritoCerrar"><i class="icon-cancel"></i></button>
            <div id="carrito-contenedor"></div>
            <div class="row mx-2">
                <p class="precioProducto col-7">TOTAL: $<span id="precioTotal"></span></p>
                <a><button id="empty-cart-btn" class=" my-3 btn btn-danger rounded-pill">Vaciar</button></a>
                <a onclick="sendProducts()" href="/checkout"><button id="checkout-btn"
                        class=" my-3 btn btn-info rounded-pill no-translate">Checkout</button></a>
            </div>
        </div>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="./js/main.js"></script>
    <script>
        document.getElementById("date").value = new Date().toLocaleString("es-ES", {
            dateStyle: "short",
            timeStyle: "short"
        });
    </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="./js/toastr.min.js"></script>
</body>

</html>